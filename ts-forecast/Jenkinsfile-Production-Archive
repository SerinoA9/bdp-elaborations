pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
	       sh 'cd ts-forecast && mvn clean test' 
            }
        }
	stage('Build'){
            steps {
	       sh 'cd ts-forecast && mvn package' 
	    }
	}
	stage('Archive'){
            steps {
	       sh 'mkdir -p /var/builds/prod-server-elaborations/'
	       sh 'cp ts-forecast/target/parking-forecast.war /var/builds/prod-server-elaborations/' 
	    }
        }
    }
}
